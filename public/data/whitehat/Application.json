
    {
        "name": "Application API",
        "methods": [
            {
                "MethodName": "Get application collection",
                "Synopsis": "Get application collection",
                "HTTPMethod": "GET",
                "URI": "/application/",
                "RequiresOAuth": "N",
                "parameters": [
                    {
                        "Name": "query_label",
                        "Required": "N",
                        "Default": "",
                        "Type": "string",
                        "Description":"Search for the label."
                    },
                    {
                        "Name": "query_label_like",
                        "Required": "N",
                        "Default": "",
                        "Type": "string",
                        "Description":"Search for something like the given label."
                    },
                    {
                        "Name": "query_application",
                        "Required": "N",
                        "Default": "",
                        "Type": "integer",
                        "Description":"Can be one or more comma-seperated application ids"
                    },
                    {
                        "Name": "query_client_id",
                        "Required": "N",
                        "Default": "",
                        "Type": "string",
                        "Description":"Can be one or more comma-seperated client ids"
                    },
                    {
                        "Name": "query_status",
                        "Required": "N",
                        "Type": "enumerated",
                        "Default": "",
                        "EnumeratedList": [ "not_configured", "site_disabled", "verify_in_progress", "need_scan_schedule", "config_in_progress", "scan_running", "active" ],
                        "Description":"Status values: [not_configured (not yet configured), site_disabled (administratively disabled), verify_in_progress (has VVSCA open), need_scan_schedule,  config_in_progress (job is suspended for some reason), scan_running (has a scan running), active (none of the above, idle)]"
                    },
                    {
                        "Name": "query_has_schedule",
                        "Required": "N",
                        "Default": 0,
                        "Type": "enumerated",
                        "EnumeratedList": [0, 1],
                        "Description": "Checks whether there is a schedule."
                    },
                    {
                        "Name": "display_scan_schedule",
                        "Required": "N",
                        "Default": 0,
                        "Type": "enumerated",
                        "EnumeratedList": [0, 1],
                        "Description": "Determines whether or not results will contain scan schedule."
                    },
                    {
                        "Name": "display_vuln_stats",
                        "Required": "N",
                        "Default": 0,
                        "Type": "enumerated",
                        "EnumeratedList": [0, 1],
                        "Description": "Determines whether or not results will contain vuln statistics for given application."
                    },
                    {
                        "Name": "accept_fmt",
                        "Required": "N",
                        "Type": "enumerated",
                        "EnumeratedList": ["application/json", "text/xml", "text/csv" ],
                        "Description": "Choose format for results."
                    },
                    {
                        "Name": "page:limit",
                        "Required": "N",
                        "Type": "integer",
                        "Description": "Limit results to n number of pages. Default is set to 5."
                    },
                    {
                        "Name": "page:offset",
                        "Required": "N",
                        "Type": "integer",
                        "Description": "Begin showing results from page number n."
                    },
                    {
                        "Name": "page:order_by",
                        "Required": "N",
                        "Type": "enumerated",
                        "EnumeratedList": ["total_findings", "total_findings_asc", "total_findings_desc", "label", "label_asc", "label_desc", "status", "status_asc", "status_desc"],
                        "Description": "Order the results."
                    }
                ]
            },
